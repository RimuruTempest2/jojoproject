<Window x:Class="Exam1.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam1"
        mc:Ignorable="d"
        Title="Dialog" Height="250" Width="300"  SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">


        <Label Width="190" Height="30" Margin="59,0,31,184" FontSize="15">Выберите сотрудника:</Label>
        <ComboBox Name="Sotr_v" FontSize="20" Width="250" Height="40" Margin="15,35,15,139">
            <TextBlock>Бородина Н.Л.</TextBlock>
            <TextBlock>Борзова П.Р.</TextBlock>
            <TextBlock>Алексеева Л.Д.</TextBlock>
        </ComboBox>
        <Label Width="190" Height="30"  FontSize="15" Margin="59,92,31,92">Укажите номер заявки:</Label>
        <TextBox Name="Nomer_z" FontSize="20" Width="250" Height="40" Margin="15,129,15,45"></TextBox>

        <WrapPanel  HorizontalAlignment="Right" Height="30" Margin="0,184,91,0">
            <Button Name="Okk" IsDefault="True" Click="Okk_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
        </WrapPanel>

    </Grid>
</Window>
