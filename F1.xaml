<Page x:Class="Exam1.F1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam1"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="780"
      Title="F1">

    <Grid Background="White">
        <DataGrid Name="Zav" Height="400" Width="600" Margin="90,32,90,98" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Услуга" Binding="{Binding Name_usl}"></DataGridTextColumn>
                <DataGridTextColumn Width="*" Header="Дата" Binding="{Binding Data_z}"></DataGridTextColumn>
                <DataGridTextColumn Width="*" Header="Время" Binding="{Binding Vremya}"></DataGridTextColumn>
                <DataGridTextColumn Width="*" Header="Посетитель" Binding="{Binding Posetit.FIO}" ></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Click="Nazad_Click"  Name="Nazad" Height="40" Content="Назад" FontFamily="Segoe UI Black" Width="120" Background="#FFD2DCE6" Margin="620,464,40,26"></Button>
    </Grid>
</Page>
